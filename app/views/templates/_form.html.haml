= form_for @template do |f|
	- if @template.errors.any?
		#error_explanation
			%h2= "#{pluralize(@template.errors.count, "error")} prohibited this template from being saved:"
			%ul
				- @template.errors.full_messages.each do |msg|
					%li= msg
	.form-group
		= f.label :name
		= f.text_field :name, class: 'form-control'
	.form-group
		= f.label :content
		= f.text_area :content, rows: 10, class: 'form-control'
	= f.fields_for :parameters do |builder|
		= render 'parameter_fields', f: builder
	= button_to_add_fields 'Add Parameter', f, :parameters, 'btn btn-default'
	.actions
		%br
		= f.submit class: 'btn btn-default'
